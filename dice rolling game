import random                                                
while True:                                                #loop
   choice = input('Roll the dice? (y/n): ').lower()        #if user enters y generate two random numbers and print them
   if choice == 'y':
    die1 = random.randint(1, 6)
    die2 = random.randint(1, 6)
    print(f'({die1}, {die2})')
   elif choice == 'n':                                      #if user enters n print thank you message to terminate
    print('Thanks for playing!')
    break
   else:                                                     #print invalid choice using another variables by the user                                                          
    print('Invalid choice')
